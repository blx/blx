#!/bin/sh

# Aliases and functions for Git
# (laziness: maximum)

# Good aliases are
#   1. MEMORABLE, using the most significant letters (eg. `gt` = `Git commiT`)
#   2. SHORT without being overly cryptic
#   3. BALANCED across the keyboard, using ergonomic chords of keys

alias ga='git add'
alias gam='git commit --amend'
alias gap='git add --patch'
# read: git-branch-local (git-branch-all is `gb` below)
alias gbl='git branch -v'
alias gc='git checkout'
alias gd='git diff'
alias gd.='git diff .'
alias gf='git fetch'
alias gl='git lg'
alias gL='git lg | head -n 6'
# note: gm is usually GraphicsMagick
alias gmer='git merge'
alias gp='git push'
alias gpl='git pull'
#alias gplv3='git fetch stallman'
alias gri='git rebase -i'
alias gst='git status'

# STATUS (short)
g() {
    # i'm a str8-up G
    branch=$(git branch | sed -En 's/\* (.+)/\1/p')
    echo "[${branch}]"
    git status -s
}

# BRANCH
gb() {
    if [ $# -ge 1 ]; then
        git branch "$@"
    else
        git branch -av
    fi
}

# COMMIT
gt() {
    if [ $# -eq 1 ]; then
        git commit -m "$1"
    else
        git commit
    fi
}

# COMMIT ALL
gat() {
    if [ $# -eq 1 ]; then
        git commit -a -m "$1"
    else
        git commit -a
    fi
}

# REMOTES
grem() {
    if [ $# -ge 1 ]; then
        git remote "$@"
    else
        git remote -v
    fi
}


if [[ $(type -t __git_complete) == 'function' ]]; then
    __git_complete gc _git_checkout
fi
